<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinAppR2.MainPage">
     <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
                    iOS="20, 40, 20, 20"
                    Android="20, 20, 20, 20"
                    WinPhone="20, 20, 20, 20" />
     </ContentPage.Padding>
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand"
                     HorizontalOptions="FillAndExpand"
                     Orientation="Vertical"
                     Spacing="15">
            <Label Text="Choose an option to enter information:" />
            
            <!--
            <Button x:Name="autoButton" Text="Automatically with Camera" Clicked="Automatic" />
            <Button x:Name="manButton" Text="Manually with keyboard" IsEnabled="false" Clicked="Manual" /> 
            -->

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
